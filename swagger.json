{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gerenciamento de Usuários e Peixes",
    "version": "1.0.0",
    "description": "API para gerenciamento de usuários e peixes em um sistema."
  },
  "servers": [
    {
      "url": "https://api-peixes.vercel.app",
      "description": "Servidor de produção"
    }
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "summary": "Lista todos os usuários",
        "responses": {
          "200": {
            "description": "Sucesso"
          }
        }
      },
      "post": {
        "summary": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso"
          },
          "400": {
            "description": "O campo 'name' é obrigatório"
          }
        }
      }
    },
    "/usuarios/login": {
      "post": {
        "summary": "Realiza login de usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido"
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/peixes": {
      "get": {
        "summary": "Lista todos os peixes",
        "responses": {
          "200": {
            "description": "Sucesso"
          }
        }
      }
    },
    "/peixes/{id}": {
      "get": {
        "summary": "Busca um peixe pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do peixe a ser buscado"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso"
          },
          "404": {
            "description": "Peixe não encontrado"
          }
        }
      },
      "put": {
        "summary": "Atualiza um peixe existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do peixe a ser atualizado"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "especie": {
                    "type": "string"
                  },
                  "tamanho": {
                    "type": "number"
                  },
                  "peso": {
                    "type": "number"
                  }
                },
                "required": [
                  "nome",
                  "especie",
                  "tamanho",
                  "peso"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Peixe atualizado com sucesso"
          },
          "404": {
            "description": "Peixe não encontrado"
          }
        }
      },
      "delete": {
        "summary": "Deleta um peixe existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do peixe a ser deletado"
          }
        ],
        "responses": {
          "200": {
            "description": "Peixe deletado com sucesso"
          },
          "404": {
            "description": "Peixe não encontrado"
          }
        }
      }
    }
  }
}