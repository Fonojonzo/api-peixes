{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gerenciamento de Usuários e Peixes",
    "version": "1.0.0",
    "description": "API para gerenciamento de usuários e peixes em um sistema."
  },
  "servers": [
    {
      "url": "https://api-peixes.vercel.app",
      "description": "Servidor de produção"
    }
  ],
  "tags": [
    {
      "name": "Usuários",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "Peixes",
      "description": "Operações relacionadas a peixes"
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Lista todos os usuários",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Usuario"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Usuários"],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuario"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso"
          },
          "400": {
            "description": "Dados requeridos ausentes"
          }
        }
      }
    },
    "/api/users/{id}": {
      "put": {
        "tags": ["Usuários"],
        "summary": "Atualiza um usuário existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário a ser atualizado"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuario"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["Usuários"],
        "summary": "Deleta um usuário existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário a ser deletado"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário deletado com sucesso"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Autentica um usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "yourStrongPassword123!"
          }
        },
        "required": ["name", "email", "password"]
      },
      "Peixe": {
        "type": "object",
        "properties": {
          "Nome": {
            "type": "string",
            "example": "Nemo"
          },
          "Especie": {
            "type": "string",
            "example": "Clownfish"
          },
          "Alimentacao": {
            "type": "string",
            "example": "Algas"
          },
          "Quantidade": {
            "type": "integer",
            "example": 3
          },
          "TempoAlimentacao": {
            "type": "string",
            "example": "2 vezes ao dia"
          },
          "ID_usuario": {
            "type": "string",
            "description": "ID do usuário associado ao peixe"
          }
        },
        "required": ["Nome", "Especie", "Alimentacao", "Quantidade", "TempoAlimentacao", "ID_usuario"]
      }
    }
  }
}

