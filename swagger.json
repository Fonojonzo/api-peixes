{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Usuários e Peixes",
    "description": "Documentação da API para gerenciamento de usuários e peixes",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-peixes-cxxg.vercel.app",
      "description": "Servidor da API"
    }
  ],
  "paths": {
    "/api/users/": {
      "post": {
        "summary": "Criar um novo usuário",
        "description": "Cria um novo usuário com os detalhes fornecidos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "get": {
        "summary": "Obter todos os usuários",
        "description": "Retorna uma lista de todos os usuários",
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "Login de um usuário",
        "description": "Autentica um usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido"
          },
          "401": {
            "description": "Não autorizado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/users/peixes/{userId}": {
      "get": {
        "summary": "Obter peixes por ID de usuário",
        "description": "Retorna uma lista de peixes associados a um ID de usuário específico",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de peixes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Peixe"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/peixes/{id}": {
      "get": {
        "summary": "Obter detalhes de peixe por ID",
        "description": "Retorna detalhes de um peixe associado a um ID específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do peixe",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Peixe"
                }
              }
            }
          },
          "404": {
            "description": "Peixe não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "put": {
        "summary": "Atualizar peixe por ID",
        "description": "Atualiza os detalhes de um peixe existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PeixeUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Peixe atualizado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Peixe não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "summary": "Deletar peixe por ID",
        "description": "Remove um peixe existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Peixe deletado com sucesso"
          },
          "404": {
            "description": "Peixe não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/peixes/": {
      "post": {
        "summary": "Criar um novo peixe",
        "description": "Cria um novo peixe com os detalhes fornecidos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PeixeCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Peixe criado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Peixe": {
        "type": "object",
        "required": [
          "ID_usuario",
          "ID_peixes",
          "Nome"
        ],
        "properties": {
          "ID_usuario": {
            "type": "string"
          },
          "ID_peixes": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          }
        }
      },
      "PeixeCreate": {
        "type": "object",
        "required": [
          "ID_usuario",
          "Nome"
        ],
        "properties": {
          "ID_usuario": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          }
        }
      },
      "PeixeUpdate": {
        "type": "object",
        "properties": {
          "ID_usuario": {
            "type": "string"
          },
          "ID_peixes": {
            "type": "string"
          },
          "Nome": {
            "type": "string"
          }
        }
      }
    }
  }
}

