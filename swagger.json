{
  "swagger": "2.0",
  "info": {
    "title": "API de Gerenciamento de Peixes",
    "description": "Documentação da API para gerenciamento de peixes",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/peixes": {
      "post": {
        "summary": "Adicionar um novo peixe",
        "description": "Endpoint para adicionar um novo peixe à base de dados.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Objeto JSON contendo os dados do novo peixe.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Especie": {
                  "type": "string",
                  "description": "Espécie do peixe"
                },
                "Nome": {
                  "type": "string",
                  "description": "Nome do peixe"
                },
                "Tempo_alimentacao": {
                  "type": "string",
                  "description": "Tempo de alimentação do peixe"
                },
                "Quantidade": {
                  "type": "number",
                  "description": "Quantidade de peixes"
                },
                "Alimentacao": {
                  "type": "string",
                  "description": "Tipo de alimentação do peixe"
                },
                "Imagem": {
                  "type": "string",
                  "description": "URL da imagem do peixe"
                }
              },
              "required": ["Especie", "Nome", "Tempo_alimentacao", "Quantidade", "Alimentacao", "Imagem"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Peixe adicionado com sucesso."
          },
          "400": {
            "description": "Campos obrigatórios não fornecidos."
          },
          "500": {
            "description": "Erro ao adicionar peixe."
          }
        }
      }
    }
  }
}